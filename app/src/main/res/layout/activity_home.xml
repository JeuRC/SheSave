<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".Home">

    <fragment
        android:id="@+id/map"
        android:name="com.google.android.gms.maps.SupportMapFragment"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        app:layout_constraintBottom_toTopOf="@+id/viwOptions"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="parent" />

    <View
        android:id="@+id/viwBar"
        android:layout_width="wrap_content"
        android:layout_height="70sp"
        android:background="@color/transparent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <Button
        android:id="@+id/btnSetting"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:backgroundTint="@color/purple_app"
        app:layout_constraintBottom_toBottomOf="@+id/viwBar"
        android:layout_marginStart="20sp"
        android:layout_marginTop="20sp"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent" />

    <View
        android:id="@+id/viwOptions"
        android:layout_width="wrap_content"
        android:layout_height="120sp"
        android:background="@color/white"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <Button
        android:id="@+id/btnSos"
        android:layout_width="130sp"
        android:layout_height="130sp"
        android:layout_marginBottom="80sp"
        android:background="@drawable/sos_button"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="@+id/viwOptions"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imgRecording"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginStart="30sp"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/purple_app"
        android:scaleType="fitCenter"
        android:src="@drawable/icon_recording"
        app:layout_constraintBottom_toBottomOf="@+id/viwOptions"
        app:layout_constraintStart_toStartOf="@+id/viwOptions"
        app:layout_constraintTop_toTopOf="@+id/viwOptions"
        tools:ignore="SpeakableTextPresentCheck" />

    <ImageButton
        android:id="@+id/imgContacts"
        android:layout_width="70sp"
        android:layout_height="70sp"
        android:layout_marginEnd="30sp"
        android:layout_marginBottom="25sp"
        android:adjustViewBounds="true"
        android:background="@drawable/rounded_button"
        android:backgroundTint="@color/purple_app"
        android:scaleType="fitCenter"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:srcCompat="@drawable/logo_emergency_contact"
        tools:ignore="ContentDescription,SpeakableTextPresentCheck" />


</androidx.constraintlayout.widget.ConstraintLayout>